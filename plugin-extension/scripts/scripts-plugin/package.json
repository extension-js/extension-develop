{
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cezaraugusto/webpack-browser-extension-scripts.git"
  },
  "engines": {
    "node": ">=18"
  },
  "name": "webpack-browser-extension-scripts",
  "version": "1.2.0",
  "description": "rspack plugin to handle manifest script assets (background, content scripts, content css, service worker) from browser extensions",
  "main": "./dist/module.js",
  "types": "./dist/module.d.ts",
  "files": [
    "dist"
  ],
  "author": {
    "name": "Cezar Augusto",
    "email": "boss@cezaraugusto.net",
    "url": "https://cezaraugusto.com"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "watch": "yarn compile --watch",
    "compile:plugin": "tsup-node ./module.ts ./loaders/* --format cjs --dts --target=node18 --minify",
    "compile:web": "tsup-node ./minimum-content-file.ts --format esm --dts --target=node18 --minify --config=tsconfig.web.json",
    "compile": "yarn compile:plugin && yarn compile:web",
    "lint": "eslint \"./**/*.ts*\"",
    "test": "jest"
  },
  "keywords": [
    "@rspack/core",
    "plugin",
    "browser",
    "web",
    "extension",
    "web-ext",
    "service worker",
    "worker",
    "background",
    "content",
    "script",
    "scripts",
    "css",
    "manifest",
    "manifest.json"
  ],
  "peerDependencies": {
    "@rspack/core": "0.7.5"
  },
  "dependencies": {
    "browser-extension-manifest-fields": "*",
    "loader-utils": "^3.2.1",
    "schema-utils": "^4.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "eslint": "^8.56.0",
    "eslint-config-extension-create": "*",
    "fs-extra": "^11.2.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "tsconfig": "*",
    "tsup": "^8.0.1",
    "@rspack/core": "0.7.5",
    "webpack-cli": "^5.1.4",
    "webpack-target-webextension": "*"
  }
}
